<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/toolbar_x_layout"
             android:id="@+id/toolbar_x"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/toolbar_x"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/input_line"
            tools:visibility="gone"/>

    <View
            android:id="@+id/input_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/input_container"
            android:background="@color/chat_input_bg_color"
            tools:visibility="gone"/>

    <FrameLayout
            android:id="@+id/input_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#F5F5F5"
            tools:visibility="gone">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginEnd="42dp"
                android:background="@drawable/chat_bg_rounded_corner"
                android:padding="12dp"
                android:inputType="text"
                android:hint="Enter message"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/dp8"
                android:background="@drawable/circle_background"
                android:padding="@dimen/dp8"
                app:srcCompat="@drawable/ic_arrow_upward_black_24dp"/>

    </FrameLayout>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/auth_emotion_cover"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline5"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline5"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.28"/>
    <TextView
            android:text="Вы не авторезированы!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/auth_error_message" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/auth_emotion_cover" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Авторизаваться"
            android:layout_width="200dp"
            app:cornerRadius="@dimen/dp16"
            android:layout_height="wrap_content"
            android:id="@+id/auth_btn" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/auth_error_message" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.motion.widget.MotionLayout>