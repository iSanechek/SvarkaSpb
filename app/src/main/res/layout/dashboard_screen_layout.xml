<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1" >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center|start"
                  android:textSize="23sp"
                  android:textStyle="bold|italic"
                  android:layout_marginStart="24dp"
                  android:textColor="@color/colorAccent"
                  android:text="@string/app_name"/>


        <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:id="@+id/dashboard_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="@dimen/dp16"
                android:visibility="invisible"/>

    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16">

        <com.bannerlayout.widget.BannerLayout
                android:id="@+id/dashboard_banner_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
            android:layout_marginTop="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <ImageButton
                android:id="@+id/dashboard_shop_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp8"
                android:layout_gravity="center"
                android:layout_marginEnd="90dp"
                android:background="@drawable/circle_background"
                app:srcCompat="@drawable/shopify"/>

        <ImageButton
                android:id="@+id/dashboard_gallery_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp8"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                app:srcCompat="@drawable/ic_photo_library_black_24dp"/>

        <ImageButton
                android:id="@+id/dashboard_work_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp8"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:background="@drawable/circle_background"
                app:srcCompat="@drawable/ic_work_black_24dp"/>
        <ImageButton
                android:id="@+id/dashboard_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp8"
                android:layout_gravity="center"
                android:layout_marginStart="110dp"
                android:visibility="gone"
                android:background="@drawable/circle_background"
                app:srcCompat="@drawable/ic_info_outline_black_24dp"/>
    </FrameLayout>


    <com.google.android.material.card.MaterialCardView
            android:id="@+id/dashboard_call_action"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            app:cardCornerRadius="@dimen/dp16">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp16"
                    app:srcCompat="@drawable/ic_call_black_24dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:text="Позвонить"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/dashboard_message_action"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            app:cardCornerRadius="@dimen/dp16">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp16"
                    app:srcCompat="@drawable/ic_message_black_24dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:text="Написать"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp8"
            android:layout_gravity="center_horizontal|bottom">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:text="by"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:text="AverdSoft"/>
    </LinearLayout>

</LinearLayout>