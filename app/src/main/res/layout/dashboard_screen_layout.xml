<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_info_outline_black_24dp"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/dp8"
            android:id="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/chat"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/dp8"
            android:visibility="invisible"
            android:id="@+id/imageButton2"
            app:layout_constraintEnd_toStartOf="@+id/imageButton" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal" app:layout_constraintGuide_percent="0.54"/>
    <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="120dp"
            android:layout_height="96dp"
            android:id="@+id/sq_top_left"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/dp16"
            app:shape_roundRect_topLeftRadius="@dimen/dp16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline">
        <View android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorAccent"/>
        <ImageView android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_gravity="center"
                   android:background="@drawable/circle_background"
                   android:padding="@dimen/dp8"
                   app:srcCompat="@drawable/ic_place_black_24dp"
                   android:tint="#ffffff"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>
    <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:id="@+id/sq_top_right"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sq_top_left"
            app:shape_roundRect_topRightRadius="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp">
        <View android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorAccent"/>
        <ImageView android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_gravity="center"
                   android:background="@drawable/circle_background"
                   android:padding="@dimen/dp8"
                   app:srcCompat="@drawable/ic_photo_library_black_24dp"
                   android:tint="#ffffff"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>
    <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:id="@+id/sq_bottom_left"
            app:shape_roundRect_bottomLeftRadius="@dimen/dp16"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp4" app:layout_constraintTop_toBottomOf="@+id/sq_top_left"
            app:layout_constraintEnd_toStartOf="@+id/sq_bottom_right" android:layout_marginEnd="@dimen/dp4">
        <View android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorAccent"/>
        <ImageView android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_gravity="center"
                   android:background="@drawable/circle_background"
                   android:padding="@dimen/dp8"
                   app:srcCompat="@drawable/shopify"
                   android:tint="#ffffff"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>
    <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="130dp"
            android:layout_height="96dp"
            android:id="@+id/sq_bottom_right"
            android:background="?android:selectableItemBackground"
            app:shape_roundRect_bottomRightRadius="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginTop="@dimen/dp4"
            app:layout_constraintTop_toBottomOf="@+id/sq_top_right">
        <View android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorAccent"/>

        <ImageView android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_gravity="center"
                   android:background="@drawable/circle_background"
                   android:padding="@dimen/dp8"
                   app:srcCompat="@drawable/chat"
                   android:tint="#ffffff"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.8987688"/>
    <TextView
            android:text="by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            android:textSize="14sp"
            android:textColor="@color/colorAccent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="@dimen/dp4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.24000001"/>
    <TextView
            android:text="AverdSoft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorAccent" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.02"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shopify"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/dp8"
            android:visibility="invisible"
            android:id="@+id/imageButton3"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.2"/>
    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/dp16"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp16">

        <com.bannerlayout.widget.BannerLayout
                android:id="@+id/banner_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </com.google.android.material.card.MaterialCardView>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:textColor="@color/colorAccent" android:textSize="32sp" android:textStyle="bold|italic"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView"/>


</androidx.constraintlayout.widget.ConstraintLayout>